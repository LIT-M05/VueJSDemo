<div id="app">
    <input type="text" class="form-control" v-model="message" />
    <button class="btn btn-primary" v-on:click="reverseClick">Reverse</button>
    <h3>{{message}}</h3>
    <button class="btn btn-success" v-on:click="addRando">Add Random Number</button>
    <button class="btn btn-warning" v-on:click="sortClick">Sort</button>
    <ul>
        <template v-for="number in numbers">
            <li style="font-size: 26px;">{{number}}</li>
        </template>
    </ul>
    <br />
    <div class="row">
        <div class="col-md-4">
            <input type="text" v-model="min" class="form-control" placeholder="Min" />
        </div>
        <div class="col-md-4">
            <input type="text" v-model="max" class="form-control" placeholder="Max" />
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary" v-on:click="addRandomBetween">Add</button>
        </div>
    </div>
    <div style="height: 500px; overflow: scroll;">
        <template v-for="num in randomNumbers">
            <div class="well" style="margin: 1px; padding: 1px;">
                <h3>{{num}}</h3>
            </div>
        </template>

    </div>

</div>



@section scripts {
    <script src="/Scripts/vue.min.js"></script>
    <script src="/Scripts/index.js"></script>
}